<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10px"
        android:background="#E9E9E9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E9E9E9"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="20px"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="惠趣推荐"
                    android:textSize="32px"
                    android:layout_centerVertical="true"
                    android:textColor="#ff1e1e"/>

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yksf_red_gou"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="20px"
                android:layout_marginTop="1px">

                <TextView
                    android:id="@+id/di"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="价格低"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>


                <ImageView
                    android:id="@+id/dao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/di"
                    android:src="@drawable/search_right"/>


                <TextView
                    android:id="@+id/di_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dao"
                    android:text="高"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:src="@drawable/yksf_red_gou"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginTop="1px"
                android:padding="20px">
                <TextView
                    android:id="@+id/gao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="价格高"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>


                <ImageView
                    android:id="@+id/dao_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/gao"
                    android:src="@drawable/search_right"/>


                <TextView
                    android:id="@+id/gao_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dao_1"
                    android:text="低"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:src="@drawable/yksf_red_gou"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginTop="1px"
                android:padding="20px">

                <TextView
                    android:id="@+id/ju"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="距离近"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>


                <ImageView
                    android:id="@+id/ju_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ju"
                    android:src="@drawable/search_right"/>


                <TextView
                    android:id="@+id/ju_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ju_1"
                    android:text="远"
                    android:textSize="32px"
                    android:textColor="#5a5963"/>

                <ImageView
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:src="@drawable/yksf_red_gou"/>


            </RelativeLayout>

        </LinearLayout>












    </LinearLayout>
</RelativeLayout>