<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/huiqu_refund_layout"
        android:layout_width="match_parent"
        android:layout_height="141px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="24px"
        android:paddingTop="24px">

        <TextView
            android:id="@+id/apply_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="72px"
            android:layout_marginRight="72px"
            android:layout_height="93px"
            android:background="@drawable/personal_all_order_delete"
            android:gravity="center"
            android:text="@string/cancel_order"
            android:textColor="@color/black_text"
            android:textSize="36px" />

        <TextView
            android:id="@+id/order_pay_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="93px"
            android:layout_marginRight="72px"
            android:background="@drawable/personal_kefu_phone"
            android:gravity="center"
            android:text="@string/order_detail_pay"
            android:textColor="@color/white"
            android:textSize="36px" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/huiqu_tel_layout"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_above="@id/huiqu_refund_layout"
        android:background="@color/huiqu_tel"
        android:paddingLeft="33px"
        android:paddingRight="33px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_huiqu_phone"
            android:textColor="@color/white"
            android:textSize="33px" />

        <TextView
            android:id="@+id/huiqu_tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/order_account_phone_text"
            android:textColor="@color/white"
            android:textSize="33px" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/huiqu_tel_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/tourist_layout"
                android:layout_width="match_parent"
                android:layout_height="135px"
                android:layout_marginTop="18px"
                android:background="@color/white"
                android:paddingLeft="33px">

                <TextView
                    android:id="@+id/order_to_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/mpxq_jd_sea"
                    android:drawablePadding="30px"
                    android:gravity="center"
                    android:textColor="@color/black_text"
                    android:textSize="42px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="42px"
                    android:background="@drawable/mpxq_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ticket_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tourist_layout"
                android:layout_marginTop="2px"
                android:background="@color/white"
                android:paddingBottom="33px"
                android:paddingLeft="33px"
                android:paddingRight="33px">

                <TextView
                    android:id="@+id/ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24px"
                    android:textColor="@color/red_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_outing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_type"
                    android:layout_marginTop="36px"
                    android:text="@string/all_order_outing_time"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_outing_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_type"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="36px"
                    android:layout_toRightOf="@id/ticket_outing_time"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_outing_time"
                    android:layout_marginTop="36px"
                    android:text="@string/all_order_ticket_num"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_outing_time"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="36px"
                    android:layout_toRightOf="@id/ticket_num"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_in_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_num"
                    android:layout_marginTop="36px"
                    android:text="@string/order_detail_goin_type"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/ticket_in_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ticket_num"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="36px"
                    android:layout_toRightOf="@id/ticket_in_type"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ticket_detail"
                android:layout_marginTop="2px"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="24px"
                android:paddingLeft="33px"
                android:paddingRight="33px"
                android:paddingTop="24px">

                <TextView
                    android:id="@+id/price_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_total"
                    android:textColor="@color/black_text"
                    android:textSize="33px" />

                <TextView
                    android:id="@+id/price_all_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red_text"
                    android:textSize="33px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/refund_gz_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_layout"
                android:layout_marginTop="12px"
                android:background="@color/white"
                android:paddingBottom="24px"
                android:paddingTop="24px">

                <TextView
                    android:id="@+id/refund_gz_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/order_detail_refund_design"
                    android:textColor="@color/red_text"
                    android:textSize="33px" />

                <ImageView
                    android:id="@+id/refund_gz_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@id/refund_gz_text"
                    android:background="@drawable/order_pay_down" />
            </RelativeLayout>

            <TextView
                android:id="@+id/refund_layout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/refund_gz_layout"
                android:layout_marginTop="12px"
                android:paddingBottom="24px"
                android:paddingLeft="33px"
                android:paddingRight="33px"
                android:paddingTop="24px"
                android:text="@string/refund_layout_text"
                android:textSize="30px"></TextView>

            <RelativeLayout
                android:id="@+id/refund_order_num_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/refund_layout_text"
                android:layout_marginTop="12px"
                android:background="@color/white"
                android:paddingBottom="24px"
                android:paddingLeft="33px"
                android:paddingRight="33px"
                android:paddingTop="24px">


                <TextView
                    android:id="@+id/refund_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:text="@string/all_order_order_num"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_order_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="24px"
                    android:layout_toRightOf="@id/refund_order_num"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_order_goout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="24px"
                    android:text="@string/personal_pay"
                    android:textColor="@color/red_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/refund_order_num"
                    android:layout_marginTop="36px"
                    android:text="@string/order_pay_time"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/refund_order_num"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="36px"
                    android:layout_toRightOf="@id/refund_time"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/refund_time"
                    android:layout_marginTop="36px"
                    android:text="@string/order_detail_pay_type"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/refund_pay_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/refund_time"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="36px"
                    android:layout_toRightOf="@id/refund_pay_type"
                    android:text="@string/refund_pay_type_text"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

            </RelativeLayout>

            <TextView
                android:id="@+id/order_msg_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/refund_order_num_layout"
                android:layout_marginTop="12px"
                android:background="@color/white"
                android:paddingBottom="24px"
                android:paddingLeft="33px"
                android:paddingRight="33px"
                android:paddingTop="24px"
                android:text="@string/account_msg"
                android:textColor="@color/black_text"
                android:textSize="33px" />

            <RelativeLayout
                android:id="@+id/order_msg_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_msg_detail"
                android:layout_marginBottom="60px"
                android:layout_marginTop="2px"
                android:background="@color/white"
                android:paddingBottom="24px"
                android:paddingLeft="33px"
                android:paddingRight="33px"
                android:paddingTop="24px">

                <TextView
                    android:id="@+id/order_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_name"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/order_account_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33px"
                    android:layout_toRightOf="@id/order_account_name"
                    android:text="@string/order_account_name_text"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/order_account_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_account_name"
                    android:layout_marginTop="24px"
                    android:text="@string/account_phone"
                    android:textColor="@color/gray_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/order_account_phone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/order_account_name"
                    android:layout_marginLeft="33px"
                    android:layout_marginTop="24px"
                    android:layout_toRightOf="@id/order_account_phone"
                    android:text="@string/order_account_phone_text"
                    android:textColor="@color/black_text"
                    android:textSize="30px" />

            </RelativeLayout>
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>