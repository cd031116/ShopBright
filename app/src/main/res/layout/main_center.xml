<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/jfsc_ima"
            android:layout_width="0dp"
            android:layout_height="331px"
            android:layout_weight="1"
            android:src="@drawable/hp_jfsc" />


        <ImageView
            android:id="@+id/xrzq_ima"
            android:layout_width="0dp"
            android:layout_height="331px"
            android:layout_weight="1"
            android:src="@drawable/hp_xrzq" />


        <ImageView
            android:id="@+id/yjgl_ima"
            android:layout_width="0dp"
            android:layout_height="331px"
            android:layout_weight="1"
            android:src="@drawable/hp_yjgn" />

    </LinearLayout>

    <!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/rmtj_ima"
            android:layout_width="0dp"
            android:layout_height="331px"
            android:layout_weight="1"
            android:src="@drawable/hp_rmtj" />

        <ImageView
            android:id="@+id/yyqg_ima"
            android:layout_width="0dp"
            android:layout_height="328px"
            android:layout_weight="1"
            android:src="@drawable/hp_1yqg" />


        <ImageView
            android:id="@+id/djms_ima"
            android:layout_width="0dp"
            android:layout_height="328px"
            android:layout_weight="1"
            android:src="@drawable/hp_djms" />


        <ImageView
            android:id="@+id/hdmk_ima"
            android:layout_width="0dp"
            android:layout_height="328px"
            android:layout_weight="1"
            android:src="@drawable/hp_hdbk" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="10px"
        android:layout_marginTop="30px"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/hp_rmht"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:drawablePadding="10px"
            android:text="热销商品"
            android:padding="20px"
            android:textSize="51px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:orientation="horizontal"
        android:paddingBottom="10px"
        android:paddingLeft="15px"
        android:paddingRight="15px">

        <ImageView
            android:id="@+id/hot_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@mipmap/error" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/hot_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/error" />

            <ImageView
                android:id="@+id/hot_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2px"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/error" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>














