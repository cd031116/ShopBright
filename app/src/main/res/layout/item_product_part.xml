<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:background="#00000000"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="20px"
                android:paddingTop="20px">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="290px"
                    android:layout_height="230px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/error"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/photo"
                    android:orientation="vertical"
                    android:padding="20px">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="溱湖国家湿地公园"
                        android:textColor="#333333"
                        android:textSize="@dimen/t_size" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_marginTop="20px"
                        android:textColor="#999999"
                        android:textSize="@dimen/t_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/desc"
                        android:layout_marginTop="50px"
                        android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥50"
                                android:textColor="@color/red_text"
                                android:textSize="40px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="起"
                                android:textColor="#999999"
                                android:textSize="@dimen/t_size" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/u_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="20px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <TextView
                    android:id="@+id/text_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/comment_ima"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:text="评论:"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_p"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="59条评论"
                    android:textColor="#333333"
                    android:textSize="@dimen/t_size" />

                <TextView
                    android:id="@+id/text_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@+id/comment"
                    android:drawableLeft="@drawable/satisfaction"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:text="满意度:"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/manyidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_m"
                    android:gravity="center_vertical"
                    android:text="34%"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="@dimen/t_size" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:src="@drawable/mpxq_up" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nei_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d8d8"/>
                <TextView
                    android:id="@+id/neirong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:textColor="#666666"
                    android:textSize="@dimen/t_size"
                    android:padding="20px"/>

            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>