<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24px">

            <ImageView
                android:id="@+id/ur_like_img"
                android:layout_width="match_parent"
                android:layout_height="380px"
                android:scaleType="fitXY"
                android:src="@drawable/person_setting" />

            <TextView
                android:id="@+id/ur_like_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_label"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_alignBottom="@id/ur_like_img"
                android:background="@drawable/hotel_shadow"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ur_like_dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_weight="1"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/ur_like_my"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_weight="1"
                    android:textColor="@color/white" />
            </LinearLayout>


            <TextView
                android:id="@+id/ms_tourist_text"
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:layout_below="@id/ur_like_img"
                android:padding="15px"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_tourist_text"
                android:layout_marginTop="18px"
                android:text="@string/account_msg"
                android:textColor="@color/red_text" />

            <TextView
                android:id="@+id/price_ms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_tourist_text"
                android:layout_marginTop="18px"
                android:layout_toRightOf="@id/price_text"
                android:text="@string/account_msg"
                android:textColor="@color/gray_text" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ms_tourist_text"
                android:layout_marginRight="18px"
                android:layout_marginTop="18px"
                android:text="@string/account_address"
                android:textColor="@color/gray_text" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>