<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2px"
    android:background="@color/personal_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ticket_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comm_white"
        android:paddingBottom="12px"
        android:paddingTop="12px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:drawableLeft="@drawable/senery"
            android:drawablePadding="24px"
            android:gravity="center"
            android:text="旅游"
            android:textColor="@color/black_text" />

        <TextView
            android:id="@+id/all_order_ticket_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:gravity="center"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_order_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ticket_layout"
        android:layout_marginTop="2px"
        android:background="@color/comm_white"
        android:paddingBottom="24px"
        android:paddingLeft="36px">

        <TextView
            android:id="@+id/order_ticket_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36px"
            android:layout_marginTop="24px"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="24px"
            android:layout_marginRight="36px"
            android:layout_toLeftOf="@id/order_ticket_number_text"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/all_order_goout"
            android:textColor="@color/black_text"
            android:textSize="30px" />


        <TextView
            android:id="@+id/order_goout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_ticket_type"
            android:layout_marginTop="24px"
            android:text="@string/all_order_goout"
            android:textColor="@color/gray_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/order_ticket_number_text"
            android:layout_marginRight="36px"
            android:layout_marginTop="24px"
            android:text="@string/all_order_ticket"
            android:textColor="@color/red_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_goout_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_ticket_type"
            android:layout_marginLeft="15px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@id/order_goout_time"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_goout_time"
            android:layout_marginTop="24px"
            android:text="@string/all_order_order_num"
            android:textColor="@color/gray_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_goout_time"
            android:layout_marginLeft="15px"
            android:layout_marginTop="24px"
            android:layout_toRightOf="@id/order_ticket_num"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_order_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/all_order_detail_layout"
        android:layout_marginTop="2px"
        android:background="@color/comm_white">

        <TextView
            android:id="@+id/order_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16px"
            android:layout_marginRight="24px"
            android:layout_marginTop="16px"
            android:background="@drawable/personal_all_order_delete"
            android:gravity="center"
            android:paddingBottom="9px"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:paddingTop="9px"
            android:text="@string/all_order_delete"
            android:textSize="33px" />
    </RelativeLayout>
</RelativeLayout>