<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="42px"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人"
                android:textColor="@color/black"
                android:textSize="43px" />

            <TextView
                android:id="@+id/normal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="￥114"
                android:textColor="@color/red_text"
                android:textSize="51px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/人"
                android:textColor="@color/color_666666"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="儿童"
                android:textColor="@color/black"
                android:textSize="43px" />

            <TextView
                android:id="@+id/child_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:text="￥60"
                android:textColor="@color/red_text"
                android:textSize="51px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/人"
                android:textColor="@color/color_666666"
                android:textSize="40px" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42px"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/normal_down_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_down_bg"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/gray_text"
                android:textSize="40px" />


            <TextView
                android:id="@+id/normal_num_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_num_bg"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/gray_text"
                android:textSize="40px" />

            <TextView
                android:id="@+id/normal_add_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_add_bg"
                android:gravity="center"
                android:text=" + "
                android:textColor="@color/t_blue"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/child_down_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_down_bg"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/gray_text"
                android:textSize="40px" />


            <TextView
                android:id="@+id/child_num_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_num_bg"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/gray_text"
                android:textSize="40px" />

            <TextView
                android:id="@+id/child_add_btn"
                android:layout_width="100px"
                android:layout_height="88px"
                android:background="@drawable/btn_add_bg"
                android:gravity="center"
                android:text=" + "
                android:textColor="@color/t_blue"
                android:textSize="40px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>