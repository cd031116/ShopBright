<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:background="#00000000"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="42px"
            android:paddingBottom="42px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/photo_r"
                    android:layout_width="290px"
                    android:layout_height="290px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px">

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/error" />

                    <TextView
                        android:id="@+id/day_time"
                        android:layout_width="wrap_content"
                        android:layout_height="53px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="10px"
                        android:background="@drawable/label_t"
                        android:textColor="#ffffff"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/address_bg_roun"
                        android:gravity="center"
                        android:padding="10px"
                        android:textColor="#ffffff"
                        android:textSize="32px" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/photo_r"
                    android:orientation="vertical"
                    android:paddingLeft="14px">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="溱湖国家湿地公园"
                        android:textColor="#333333"
                        android:textSize="46px" />

                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_marginTop="20px"
                        android:textColor="#999999"
                        android:textSize="37px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/desc"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥50"
                            android:textColor="@color/red_text"
                            android:textSize="72px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起"
                            android:textColor="#999999"
                            android:textSize="43px" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/u_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="26px"
                android:paddingRight="26px"
                android:paddingTop="44px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/comment_ima"
                        android:drawablePadding="12px"
                        android:gravity="center_vertical"
                        android:text="评论:"
                        android:textColor="#999999"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/text_p"
                        android:gravity="center_vertical"
                        android:textColor="#333333"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/text_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48px"
                        android:layout_toRightOf="@+id/comment"
                        android:drawableLeft="@drawable/satisfaction"
                        android:drawablePadding="12px"
                        android:gravity="center_vertical"
                        android:text="满意度:"
                        android:textColor="#999999"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/manyidu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/text_m"
                        android:gravity="center_vertical"
                        android:text="34%"
                        android:textColor="#333333"
                        android:textSize="34px" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/mpxq_up"
                    android:visibility="gone" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nei_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#d9d8d8" />

                <TextView
                    android:id="@+id/neirong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20px"
                    android:textColor="#666666"
                    android:textSize="@dimen/t_size"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>