<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10px">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:singleLine="true"
        android:textSize="38px"
        android:layout_marginLeft="5px"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/content"
        android:padding="10px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red_text"
                android:padding="10px"
                android:text="网上支付"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:background="@drawable/mp_list_bg"
                android:padding="10px"
                android:text="优惠券"
                android:textColor="@color/red_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:background="@drawable/mp_list_bg"
                android:padding="10px"
                android:text="促销"
                android:textColor="@color/red_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mp_list_bg"
                android:padding="10px"
                android:layout_marginLeft="5px"
                android:text="随时退"
                android:textColor="@color/red_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当天14点前可预订当日票"
                android:textColor="#A8B4D5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60px"
                android:gravity="center_vertical"
                android:text="票型说明"
                android:drawablePadding="10px"
                android:drawableRight="@drawable/mpxq_right"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/content"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="10px">

        <TextView
            android:id="@+id/now_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:padding="10px"
            android:textColor="@color/red_text"
            android:textSize="32px" />


        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5px"
            android:gravity="right"
            android:padding="10px"
            android:textColor="#666666"
            android:textSize="28px" />

          <TextView
            android:id="@+id/submit"
            android:layout_width="178px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:background="@drawable/pay_tj"
            android:gravity="center"
            android:padding="10px"
            android:text="预定"
            android:textColor="#ffffff"
            android:textSize="32px" />

    </LinearLayout>


</RelativeLayout>