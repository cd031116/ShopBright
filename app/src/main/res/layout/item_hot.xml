<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_top"
    android:layout_width="390px"
    android:layout_height="350px">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24px">

            <ImageView
                android:id="@+id/ur_like_img"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:scaleType="fitXY"
                android:src="@mipmap/error" />

            <TextView
                android:id="@+id/ur_like_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="36px"
                android:text="周末有"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ur_like_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ur_like_img"
                android:layout_margin="36px"
                android:text="47点评"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ms_tourist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ur_like_img"
                android:layout_marginRight="18px"
                android:layout_marginTop="18px"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/account_msg"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_tourist_text"
                android:layout_marginTop="18px"
                android:text="@string/account_msg"
                android:textColor="@color/red_text" />

            <TextView
                android:id="@+id/price_ms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_tourist_text"
                android:layout_marginTop="18px"
                android:layout_toRightOf="@id/price_text"
                android:text="@string/account_msg"
                android:textColor="@color/gray_text" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_msg"
                android:textColor="@color/gray_text"
                android:layout_alignBaseline="@+id/price_text"
                android:layout_alignBottom="@+id/price_text"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>