<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/team_top_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@drawable/team_top_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="30px">

            <LinearLayout
                android:id="@+id/line_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dip"
                    android:src="@drawable/login_arrow_left" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/go_search"
                android:layout_toRightOf="@+id/line_back">

                <TextView
                    android:id="@+id/top_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:background="@null"
                    android:drawablePadding="10px"
                    android:gravity="center"
                    android:text="跟团游"
                    android:textColor="#ffffff"
                    android:textSize="43px" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/go_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:gravity="center_vertical"
                android:src="@drawable/xiaoxi_bai" />

        </RelativeLayout>
    </LinearLayout>

    <com.zhl.huiqu.widget.MyScroview
        android:id="@+id/myscroview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_search"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:background="@drawable/team_search_g" />


        <RelativeLayout
            android:id="@+id/search_re"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@drawable/team_search_bg"
            android:padding="30px">

            <RelativeLayout
                android:id="@+id/searh_line"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginBottom="30px"
                android:layout_toLeftOf="@+id/line_d"
                android:background="@drawable/team_search_bg_r">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="10px"
                    android:drawablePadding="9px"
                    android:drawableRight="@drawable/team_down_local"
                    android:gravity="center_vertical"
                    android:text="长沙"
                    android:textColor="#ffffff"
                    android:textSize="32px" />


                <TextView
                    android:id="@+id/line_t"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="28px"
                    android:layout_marginRight="28px"
                    android:layout_toRightOf="@+id/address"
                    android:background="#949393" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/line_t"
                    android:drawableLeft="@drawable/team_search"
                    android:drawablePadding="18px"
                    android:gravity="center_vertical"
                    android:text="输入您要搜索的景点/地区"
                    android:textColor="#ffffff"
                    android:textSize="32px" />
            </RelativeLayout>

        </RelativeLayout>


        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingTop="55px">

            <LinearLayout
                android:id="@+id/all_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86px"
                    android:layout_height="86px"
                    android:src="@drawable/t_quanbu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="全部"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="95px"
                    android:layout_height="86px"
                    android:src="@drawable/t_lmhj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="浪漫海景"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="88px"
                    android:layout_height="86px"
                    android:src="@drawable/t_gjms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="风景名胜"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="95px"
                    android:layout_height="86px"
                    android:src="@drawable/t_ssly" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="水上乐园"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="92px"
                    android:layout_height="86px"
                    android:src="@drawable/t_csgg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="城市观光"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="55px"
            android:paddingTop="74px">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="91px"
                    android:layout_height="86px"
                    android:src="@drawable/t_ylsj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="游乐世界"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="82px"
                    android:layout_height="86px"
                    android:src="@drawable/t_lsrw" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="历史人文"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="89px"
                    android:layout_height="86px"
                    android:src="@drawable/t_jkys" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="健康养生"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86px"
                    android:layout_height="86px"
                    android:src="@drawable/t_ysjd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="影视基地"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86px"
                    android:layout_height="86px"
                    android:src="@drawable/t_fsmq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="风俗民情"
                    android:textColor="@color/black_text"
                    android:textSize="28px" />
            </LinearLayout>
        </LinearLayout>


        <!--热门-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:paddingBottom="50px"
                android:paddingTop="40px">

                <TextView
                    android:id="@+id/zb_lv"
                    android:layout_width="8px"
                    android:layout_height="wrap_content"
                    android:background="#50D7F9"
                    android:padding="10px"
                    android:textColor="#343434" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/zb_lv"
                    android:padding="10px"
                    android:text="热门目的地"
                    android:textColor="@color/black"
                    android:textSize="48px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:drawablePadding="30px"
                    android:drawableRight="@drawable/team_into_lan"
                    android:gravity="center_vertical"
                    android:text="全部"
                    android:textColor="#59c2de"
                    android:textSize="32px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#FFFFFF">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/ll_dot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingBottom="20px"
            android:paddingTop="20px">

            <TextView
                android:id="@+id/dj_lv"
                android:layout_width="8px"
                android:layout_height="wrap_content"
                android:background="#50D7F9"
                android:padding="10px"
                android:textColor="#343434" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/dj_lv"
                android:padding="10px"
                android:text="当季热卖"
                android:textColor="@color/black"
                android:textSize="48px" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:paddingLeft="15px"
            android:paddingRight="15px">

            <ImageView
                android:id="@+id/hot_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@mipmap/error" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hot_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/error" />

                <ImageView
                    android:id="@+id/hot_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/error" />
            </LinearLayout>

        </LinearLayout>

        <!--精选推荐-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5px"
                android:orientation="horizontal"
                android:paddingBottom="50px"
                android:paddingTop="40px">

                <TextView
                    android:id="@+id/jx_lv"
                    android:layout_width="8px"
                    android:layout_height="wrap_content"
                    android:background="#50D7F9"
                    android:padding="10px"
                    android:textColor="#343434" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/jx_lv"
                    android:padding="10px"
                    android:text="精选推荐"
                    android:textColor="@color/black"
                    android:textSize="48px" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:drawablePadding="30px"
                    android:drawableRight="@drawable/team_into_lan"
                    android:gravity="center_vertical"
                    android:text="所有路线"
                    android:textColor="#59c2de"
                    android:textSize="32px" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f0f0f0" />



        <LinearLayout
            android:id="@+id/search02"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="vertical">

            <include layout="@layout/gt_tab_main" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1900px"
            android:layout_marginTop="1px">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include
                android:id="@+id/view_empty"
                android:visibility="gone"
                layout="@layout/view_empty"/>

            <include
                android:id="@+id/view_progress"
                layout="@layout/view_progress"
                android:visibility="gone"/>

        </RelativeLayout>

    </LinearLayout>
    </com.zhl.huiqu.widget.MyScroview>

    <LinearLayout
        android:id="@+id/search01"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@+id/main_search"
        android:orientation="vertical" />

</RelativeLayout>