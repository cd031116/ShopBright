<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_footer_height" android:gravity="center" android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressLoading"
            style="@style/LoadingProgressBar" android:layout_width="36dip" android:layout_height="36dip"/>

        <TextView
            android:id="@+id/btnMore" android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground" android:gravity="center"
            android:visibility="visible"/>
    </LinearLayout>


</LinearLayout>
