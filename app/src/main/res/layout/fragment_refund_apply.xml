<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ticket_layout"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/order_detail_progress"
        android:layout_marginTop="2px"
        android:background="@color/comm_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:drawableLeft="@drawable/all_order_ticket"
            android:drawablePadding="24px"
            android:gravity="center"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/all_order_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="228px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ticket_layout"
        android:layout_marginTop="2px"
        android:background="@color/comm_white"
        android:paddingLeft="36px">

        <TextView
            android:id="@+id/order_ticket_type"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_marginTop="36px"
            android:text="@string/all_order_goout"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_type_text"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="36px"
            android:layout_toRightOf="@id/order_ticket_type"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_number_text"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36px"
            android:layout_marginTop="36px"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_goout_time"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_below="@id/order_ticket_type"
            android:layout_marginTop="36px"
            android:text="@string/all_order_outing_time"
            android:textColor="@color/gray_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_below="@id/order_ticket_number_text"
            android:layout_marginRight="36px"
            android:layout_marginTop="36px"
            android:text="@string/all_order_ticket"
            android:textColor="@color/red_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_goout_time_text"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_below="@id/order_ticket_type"
            android:layout_marginLeft="15px"
            android:layout_marginTop="36px"
            android:layout_toRightOf="@id/order_goout_time"
            android:text="@string/all_order_ticket"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_below="@id/order_goout_time"
            android:layout_marginTop="36px"
            android:text="@string/all_order_order_num"
            android:textColor="@color/gray_text"
            android:textSize="30px" />

        <TextView
            android:id="@+id/order_ticket_num_text"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_below="@id/order_goout_time"
            android:layout_marginLeft="15px"
            android:layout_marginTop="36px"
            android:layout_toRightOf="@id/order_ticket_num"
            android:text="@string/all_order_order_num"
            android:textColor="@color/black_text"
            android:textSize="30px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/refund_know"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/all_order_detail_layout"
        android:layout_marginTop="12px"
        android:background="@color/white"
        android:drawableLeft="@drawable/tuikuan_money"
        android:drawablePadding="12px"
        android:gravity="center_vertical"
        android:paddingBottom="24px"
        android:paddingLeft="33px"
        android:paddingTop="24px"
        android:text="@string/refund_know"
        android:textColor="@color/black_text"
        android:textSize="33px" />

    <TextView
        android:id="@+id/refund_know_text"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/refund_know"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="24px"
        android:paddingLeft="33px"
        android:paddingRight="33px"
        android:paddingTop="24px"
        android:text="@string/refund_know"
        android:textColor="@color/gray_text"
        android:textSize="30px" />

    <TextView
        android:id="@+id/refund_reason"
        android:layout_width="match_parent"
        android:layout_height="114px"
        android:layout_below="@id/refund_know_text"
        android:layout_marginTop="12px"
        android:background="@color/white"
        android:drawableLeft="@drawable/tuikuan_money"
        android:drawablePadding="12px"
        android:gravity="center_vertical"
        android:paddingBottom="24px"
        android:paddingLeft="33px"
        android:paddingTop="24px"
        android:text="@string/refund_reason"
        android:textColor="@color/black_text"
        android:textSize="33px" />

    <LinearLayout
        android:id="@+id/refund_reason_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/refund_reason"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="30px"
        android:paddingLeft="48px"
        android:paddingRight="48px"
        android:paddingTop="30px">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:button="@drawable/checkbox_style"
            android:checked="true"
            android:paddingLeft="30px"
            android:text="@string/refund_know"
            android:textSize="33px" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:button="@drawable/checkbox_style"
            android:checked="true"
            android:paddingLeft="30px"
            android:text="@string/refund_know"
            android:textSize="33px" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:button="@drawable/checkbox_style"
            android:checked="true"
            android:paddingLeft="30px"
            android:text="@string/refund_know"
            android:textSize="33px" />

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_style"
            android:checked="true"
            android:paddingLeft="30px"
            android:layout_marginBottom="24px"
            android:text="@string/refund_know"
            android:textSize="33px" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="33px"
            android:layout_marginRight="33px"
            android:background="@drawable/personal_all_order_delete"
            android:hint="@string/refund_reason_edit"
            android:textSize="30px"
            android:padding="24px"
            android:gravity="top"
            android:layout_height="240px" />

        <TextView
            android:id="@+id/commit_refund_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/commit_refund_apply"
            android:textSize="36px"
            android:textColor="@color/white"
            android:layout_marginTop="24px"
            android:padding="21px"
            android:background="@drawable/shape_login_commit"/>
    </LinearLayout>
</RelativeLayout>