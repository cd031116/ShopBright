<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginBottom="28px"
    android:paddingTop="42px"
    android:paddingLeft="42px"
    android:paddingRight="42px">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42px"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42px"
        android:layout_marginTop="28px"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/id_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42px"
        android:layout_marginTop="28px"
        android:textColor="#333333"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118px"
        android:gravity="center_vertical"
        android:paddingTop="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/man"
            android:layout_width="46px"
            android:layout_height="46px"
            android:button="@null"
            android:visibility="gone"
            android:background="@drawable/sex_bg"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="40px"
                android:layout_toRightOf="@+id/man"
                android:visibility="gone"
                android:layout_marginLeft="12px"
                android:text="默认地址"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">


            <ImageView
                android:id="@+id/delete_ima"
                android:layout_width="46px"
                android:layout_height="46px"
                android:button="@null"
                android:background="@drawable/delete"/>

            <TextView
                android:id="@+id/delete_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="40px"
                android:layout_toRightOf="@+id/man"
                android:layout_marginLeft="12px"
                android:text="删除"/>


            <ImageView
                android:id="@+id/edit_ima"
                android:layout_width="46px"
                android:layout_height="46px"
                android:layout_marginLeft="42px"
                android:button="@null"
                android:background="@drawable/edit"/>

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="40px"
                android:layout_toRightOf="@+id/man"
                android:layout_marginLeft="12px"
                android:text="编辑"/>


        </LinearLayout>



    </RelativeLayout>





</LinearLayout>