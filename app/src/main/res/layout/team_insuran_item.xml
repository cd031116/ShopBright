<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/baoxian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/baoxian_text"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="60px"
            android:text="出游意外险"
            android:textColor="#333333"
            android:textSize="37px" />

        <TextView
            android:id="@+id/baoxian_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/baoxian_name"
            android:layout_marginLeft="86px"
            android:layout_toRightOf="@id/baoxian_name"
            android:textColor="@color/red_text"
            android:textSize="51px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/baoxian_name"
            android:layout_toRightOf="@id/baoxian_price"
            android:text="/人"
            android:textColor="@color/black"
            android:textSize="37px" />


        <ImageView
            android:id="@+id/baoxian_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/baoxian_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:focusable="false"
            android:background="@drawable/check_choose_tour_style"
            android:button="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/n_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:textSize="37px"
        android:text="新华国内旅行意外保险（适用于出游6~7天）"
        android:textColor="#333333"/>


</LinearLayout>