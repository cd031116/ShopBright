<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="28px"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/choose_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="42px"
        android:paddingLeft="42px"
        android:paddingTop="56px"
        android:text="自选景区+自选酒店"
        android:textColor="@color/black"
        android:textSize="46px" />

    <TextView
        android:id="@+id/choose_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="42px"
        android:text="sdsds"
        android:textColor="@color/black_text"
        android:textSize="40px" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commit_btn"
            android:layout_width="346px"
            android:layout_height="116px"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="42px"
            android:layout_marginRight="42px"
            android:layout_marginTop="42px"
            android:background="@drawable/bg_hotel_detail_btn"
            android:gravity="center"
            android:text="自由组合"
            android:textColor="@color/white"
            android:textSize="46px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/commit_btn"
            android:layout_toLeftOf="@id/commit_btn"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="42px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="￥"
                android:textColor="@color/red_text"
                android:textSize="42px" />

            <TextView
                android:id="@+id/hotel_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="788"
                android:textColor="@color/red_text"
                android:textSize="64px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="起/份"
                android:textColor="#666666"
                android:textSize="34px" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>